               <image>
                  <Image url="@SVGRepo_iconCarrier%20(2).png" />
               </image>
               <HBox.margin>
                  <Insets bottom="5.0" left="20.0" top="5.0" />
               </HBox.margin>
            </ImageView>
            <ComboBox fx:id="comboBoxCountry" prefHeight="30.0" prefWidth="263.0" style="-fx-background-color: white;">
