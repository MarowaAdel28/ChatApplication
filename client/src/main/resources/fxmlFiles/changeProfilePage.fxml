            </TextField>
         </children>
         <VBox.margin>
            <Insets left="20.0" right="20.0" top="10.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER" maxWidth="1.7976931348623157E308" VBox.vgrow="NEVER">
         <children>
            <Button fx:id="buttonUpdate" minWidth="200.0" mnemonicParsing="false" onAction="#updateProfile" style="-fx-background-radius: 20; -fx-background-color: F84D43;" text="Update" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
