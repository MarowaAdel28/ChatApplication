               <children>
                  <ImageView fx:id="buttonAddImage" fitHeight="27.0" fitWidth="52.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@3032276.png" />
                     </image>
                  </ImageView>
                  <ImageView fx:id="buttonRemoveImage" fitHeight="27.0" fitWidth="62.0" pickOnBounds="true" preserveRatio="true">
