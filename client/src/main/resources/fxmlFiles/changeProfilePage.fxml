                  <Insets bottom="5.0" left="20.0" top="5.0" />
               </HBox.margin>
            </ImageView>
            <TextField fx:id="newEmail" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="Ahmed_Rohouma@gmial.com" style="-fx-background-color: transparent; -fx-border-color: transparent;" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="14.0" />
               </font>
