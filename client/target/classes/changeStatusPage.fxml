<VBox maxHeight="500.0" maxWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="55.0" prefWidth="227.0" style="-fx-border-color: TRANSPARENT;" text="Status" textFill="#f84d43">
         <font>
            <Font name="System Bold" size="28.0" />
         </font>
         <VBox.margin>
            <Insets left="30.0" top="10.0" />
         </VBox.margin>
      </Label>
      <Label text="Change your status to let your contact know that you are not available for some reasons." textFill="#c6c6c6" textOverrun="LEADING_ELLIPSIS" wrapText="true" VBox.vgrow="ALWAYS">
         <font>
            <Font size="16.0" />
         </font>
         <VBox.margin>
            <Insets left="30.0" right="50.0" />
         </VBox.margin>
      </Label>
      <RadioButton mnemonicParsing="false" selected="true" text="Available">
         <font>
            <Font size="16.0" />
         </font>
         <toggleGroup>
            <ToggleGroup fx:id="statusGroup" />
         </toggleGroup>
         <VBox.margin>
            <Insets bottom="10.0" left="40.0" top="30.0" />
         </VBox.margin>
      </RadioButton>
      <RadioButton mnemonicParsing="false" text="Busy" toggleGroup="$statusGroup">
         <font>
            <Font size="16.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" left="40.0" />
         </VBox.margin>
      </RadioButton>
      <RadioButton mnemonicParsing="false" text="Away" toggleGroup="$statusGroup">
         <font>
            <Font size="16.0" />
         </font>
         <VBox.margin>
            <Insets bottom="50.0" left="40.0" />
         </VBox.margin>
      </RadioButton>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="updateButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="221.0" style="-fx-background-radius: 20; -fx-background-color: F84D43;" text="Update" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="50.0" left="100.0" right="100.0" top="20.0" />
         </padding>
      </HBox>
   </children>
</VBox>
